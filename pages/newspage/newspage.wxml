<view class="container">
    <!--indicator-dots:点；autoplay:自动轮播；inintercal:间隔时间；duration:持续时间；circular:是否衔接滑动；vertical:是否垂直滑动-->
    <swiper class="swiper-warpper" indicator-dots="true" autoplay="true" interval="3000" duration="800" circular="true">
        <swiper-item class="swiper-item">
            <image class="swiper-img" src="/images/xizang1.jpeg"></image>
        </swiper-item>
        <swiper-item class="swiper-item">
            <image class="swiper-img" src="/images/xizang2.jpeg"></image>
        </swiper-item>
        <swiper-item class="swiper-item">
            <image class="swiper-img" src="/images/xizang3.jpeg"></image>
        </swiper-item>
    </swiper>
    <block wx:for="{{newsArr_key}}" wx:for-item="news">
    <view class="news-content" >
        <view class="content-title-avator">
            <image class="content-title-image" src="{{news.avatar}}"></image>
            <text class="content-title-date">{{news.date}}</text>
        </view>
        <text class="title-text">{{news.title}}</text>
        <image class="content-img" src="{{news.imgSrc}}"></image>
        <text class="content-brief">{{news.content}}</text>
        <view class="content-icon"> 
            <image class="icon" src="/images/icon/chat.png"></image>
            <text class="text">收藏</text>
            <image class="icon" src="/images/icon/view.png"></image>
            <text class="text">刷刷</text>
        </view>
    </view>
    </block>
</view>