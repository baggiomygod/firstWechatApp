.news-content{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-bottom: 1px solid rgba(7,17,27,0.1);
    border-top: 1px solid rgba(7,17,27,0.1);
    padding-bottom: 5px;
}

.news-content .content-title-avator{
    margin: 10rpx 0 20rpx 10rpx;
}
.content-title-image{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}
.content-title-date{
    margin-left: 20rpx;
    font-size: 24rpx;
    vertical-align: middle;
}
.title-text{
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    margin-left: 10px;
}
.content-img{
    width: 100%;
    height: 200px;
    margin-bottom:10px;
}
.content-brief{
    font-size: 28rpx;
    margin: 0 20rpx 10px 20rpx;
    line-height: 38rpx;
    color: #666;
}
.content-icon{
    display: flex;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10rpx;
    font-size: 13px;
}
.content-icon .icon{
    height: 16px;
    width: 16px;
    margin-right: 8px;
    vertical-align: middle;
}
.content-icon .text{
    margin-right: 10px;
    line-height: 16px;
    vertical-align: middle;
    color: #666;
}

